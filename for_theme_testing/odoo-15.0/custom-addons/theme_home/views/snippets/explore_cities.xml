<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="explore_city" name="Explore Cities">
        <section id="explore_cities" class="explore-cities py-5">
            <div class="container">
                <div class="text-center ">
                    <h2 class="h1">Explore Cities</h2>
                    <p>Lorem ipsum is placeholder text commonly used in the graphic, print, and publishing
                        industries for<br/>previewing layouts and visual mockups.
                    </p>
                </div>
                <div class="row justify-content-center" id="yh-cities-row">
                </div>
            </div>
        </section>
    </template>
    <template id="explore_cities_options" inherit_id="website.snippet_options">
        <xpath expr="//div[@data-js='Box']" position="before">
            <div data-js="ExploreCitiesOptions" data-selector="#explore_cities">
            </div>
        </xpath>
    </template>
</odoo>