<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <template id="carousel_slides" name="Explore Slides">
            <section id="carousel_test">
                <div id="slider-container" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <!-- The slides will be dynamically rendered here-->
                        <div class="container">
                            <!--                            <p class="test_click">Test Click</p>-->
                            <div class="text-center py-5">
                                <h2 class="h1">Add Carousel</h2>
                            </div>
                            <div id="slider_view" class="carousel-row">
                                <!-- Slide items will be appended here -->
                            </div>
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#slider-container" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true">

                        </span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#slider-container" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true">

                        </span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </section>
        </template>
    </data>
</odoo>